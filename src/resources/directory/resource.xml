<?xml version="1.0"?>

<resource xmlns="http://www.wyona.org/yanel/1.0" name="directory" namespace="http://www.wyona.org/yanel/resource/1.0" class="org.wyona.yanel.impl.resources.collection.CollectionResource">
<description>
Collection (resp. Directory, resp. Folder) resource
</description>

<rtd>
  <property name="default-xslt"/> <!-- OPTIONAL: Allows to overwrite default XSLT (htdocs/default_dir2xhtml.xsl) to transform from XML to XHTML -->

  <property name="default-xslt_disabled" default="false"/> <!-- OPTIONAL: When set to true and property 'default-xslt' is not set, then also the default XSLT 'htdocs/default_dir2xhtml.xsl' is not applied, which means one can use 'views' of the BasicXMLResource -->

  <property name="xslt"/> <!-- OPTIONAL: Can be used multiple times (see XML resource) after the default XSLT was applied, unless the default XSLT was disabled. For example to apply a global XSLT generating a global header and navigation -->

  <property name="yanel-path"/> <!-- OPTIONAL: Set a specific yarep collection path, whereas one can also use the file protocol (e.g. file:/home/USER) in order to access the file system instead a yarep repository -->

  <property name="date-format"/> <!-- OPTIONAL: Set a specific date format, e.g. 'dd MM yyyy' or 'yyyy-MM-dd'T'HH:mm:ssZ' -->

  <property name="mime-type"/>
</rtd>
</resource>
