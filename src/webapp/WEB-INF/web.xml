<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
  version="2.4">

<!-- AFAIK default session timeout is 30 minutes. NOTE: Please make sure to restart server and to delete browser cookies and to delete work directory of Tomcat! -->
<!--
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
-->

  <distributable/>

  <display-name>Yanel</display-name>
  <description>Yanel</description>

        <!-- Javamelody START -->
<!-- See http://lists.wyona.org/pipermail/yanel-development/2014-March/006193.html
        <filter>
          <filter-name>javamelody</filter-name>
          <filter-class>net.bull.javamelody.MonitoringFilter</filter-class>
        </filter>
        <filter-mapping>
          <filter-name>javamelody</filter-name>
          <url-pattern>/*</url-pattern>
        </filter-mapping>
        <listener>
          <listener-class>net.bull.javamelody.SessionListener</listener-class>
        </listener>
-->
        <!-- Javamelody END -->

  <servlet>
    <servlet-name>YanelServlet</servlet-name>
    <servlet-class>org.wyona.yanel.servlet.YanelServlet</servlet-class>

<!-- NOTE: ssl-port parameter is being added during build process (see src/build/add-ssl-port.xsl) -->

    <init-param>
      <param-name>memory.growth.threshold</param-name>
      <param-value>150</param-value>
    </init-param>

    <init-param>
      <param-name>exception-and-info-screen-xslt</param-name>
      <param-value>xslt/xmlInfo2xhtml.xsl</param-value>
    </init-param>

    <init-param>
     <param-name>login-screen-xslt</param-name>
     <param-value>xslt/login-screen.xsl</param-value>
    </init-param>

    <!-- Enable/Disable toolbar functionality. For security and performance reasons one might want to disable the toolbar functionality completely with this parameter -->
    <init-param>
     <param-name>toolbar-master-switch</param-name>
     <param-value>on</param-value>
     <!--<param-value>off</param-value>-->
    </init-param>

    <!-- If a resource is workflowable, has a workflow, but is not live yet, then the most recent version shall be displayed in order to stay backwards compatible -->
    <init-param>
      <param-name>workflow.not-live.most-recent-version</param-name>
      <param-value>true</param-value> <!--The default value needs to be true in order to stay backwards compatible -->
      <!--<param-value>false</param-value>-->
    </init-param>

    <!-- Log access -->
    <init-param>
      <param-name>log-access</param-name>
      <param-value>true</param-value> <!-- INFO: For privacy or performance/scalability reasons you might want to set this parameter to false in order to disable access logging. IMPORTANT: Please note that if a client/browser has DNT (Do Not Track) enabled, then access won't be logged even if log-access is set to true! -->
    </init-param>

    <!-- Access log tag separator -->
    <init-param>
      <param-name>access-log-tag-separator</param-name>
      <!--<param-value>SPACE</param-value>--> <!-- Note that the leading and trailing space around the parameter value is trimmed, hence we denote the space sign by SPACE. -->
      <param-value>,</param-value>
    </init-param>

    <!-- Detect mobile devices for every request -->
    <init-param>
      <param-name>detect-mobile-per-request</param-name>
      <param-value>false</param-value> <!--The default value needs to be false because of performance/scalability reasons -->
      <!--<param-value>true</param-value>-->
    </init-param>

    <!-- List of mobile devices (INFO: One can also specify a combination of words, e.g. 'Android AND Fennec' -->
    <init-param>
      <param-name>mobile-devices</param-name>
      <param-value>iPhone,Android,iPod,BlackBerry,PalmSource,PalmOS,Nokia,Sony,SonyEricsson,Samsung,SAMSUNG,Symbian,iemobile,IEMobile</param-value>
    </init-param>

    <!-- Allow client-side caching of static htdocs content. Specify value in hours. -->
    <init-param>
     <param-name>static-content-cache-expires</param-name>
     <param-value>2</param-value>
    </init-param>
  </servlet>

  <servlet-mapping>
    <servlet-name>YanelServlet</servlet-name>
    <url-pattern>/</url-pattern>
    <!--
    <url-pattern>/servlet/Yanel</url-pattern>
    -->
  </servlet-mapping>
  
  <filter>
    <filter-name>YanelFilter</filter-name>
    <filter-class>org.wyona.yanel.servlet.communication.YanelFilter</filter-class>
    <init-param>
      <param-name>max-file-size</param-name> <!-- in bytes -->
      <param-value>-1</param-value> <!-- value '-1' means that there is no limit -->
<!--
      <param-value>3000000</param-value>
-->
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>YanelFilter</filter-name>
    <servlet-name>YanelServlet</servlet-name>
  </filter-mapping>

  <listener>
    <listener-class>org.wyona.yanel.servlet.SessionCounter</listener-class>
  </listener>
  
</web-app>
