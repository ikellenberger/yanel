<?xml version="1.0"?>

<resource xmlns="http://www.wyona.org/yanel/1.0"
  name="file"
  namespace="http://www.wyona.org/yanel/resource/1.0"
  class="org.wyona.yanel.impl.resources.node.NodeResource"
  >
<description>
Generic node resource
</description>

<rtd>
  <property name="mime-type"/>
  <property name="encoding"/>

  <!-- If no src property is specified, then the request path will be used -->
  <property name="src"/>
  <!-- For example (IMPORTANT: Do not forget the leading slash!)
    <yanel:property name="src" value="/index.html"/>
  -->

  <!-- INFO: Optional, whereas when set, then the HTTP header 'Expires' will be set, based on the current date and the number of days to expiration (e.g. 7) -->
  <property name="days-to-expiration"/>
</rtd>
</resource>
